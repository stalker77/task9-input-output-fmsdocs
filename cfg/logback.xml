<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-6r [%15.15t] %-5p %30.30c %X | %m%n</pattern>
    </encoder>
  </appender>
  <root level="debug">
    <appender-ref ref="console"/>
  </root>
</configuration>